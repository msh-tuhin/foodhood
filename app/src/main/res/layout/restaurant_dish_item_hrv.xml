<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingRight="8dp"
    android:paddingEnd="8dp"
    android:paddingLeft="8dp"
    android:paddingStart="8dp">

    <ImageView
        android:id="@+id/wishlist_dish_image"
        android:layout_width="168dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ltgray" />

    <TextView
        style="@style/TextClickableBlack"
        android:id="@+id/wishlist_dish_name"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Dish Name"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_star_black_24dp"/>
        <TextView
            android:textColor="#000000"
            android:id="@+id/wishlist_dish_rating"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Dish Rating"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="match_parent"
            android:src="@drawable/taka"/>
        <TextView
            android:textColor="#000000"
            android:id="@+id/price"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Price"/>
    </LinearLayout>

</LinearLayout>