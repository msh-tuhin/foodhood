<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingRight="8dp">

    <ImageView
        android:id="@+id/wishlist_dish_image"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/key_lime_pie" />

    <TextView
        android:id="@+id/wishlist_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Dish Name"
        app:layout_constraintEnd_toEndOf="@+id/wishlist_dish_image"
        app:layout_constraintStart_toStartOf="@+id/wishlist_dish_image"
        app:layout_constraintTop_toBottomOf="@+id/wishlist_dish_image" />
    <TextView
        android:id="@+id/wishlist_dish_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="8dp"
        android:text="Dish Rating"
        app:layout_constraintStart_toStartOf="@+id/wishlist_dish_name"
        app:layout_constraintTop_toBottomOf="@+id/wishlist_dish_name"
        app:layout_constraintEnd_toEndOf="@+id/wishlist_dish_image" />
    <TextView
        android:id="@+id/wishlist_dish_rest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="8dp"
        android:text="Restaurant Name"
        app:layout_constraintStart_toStartOf="@+id/wishlist_dish_name"
        app:layout_constraintTop_toBottomOf="@+id/wishlist_dish_rating"
        app:layout_constraintEnd_toEndOf="@id/wishlist_dish_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>