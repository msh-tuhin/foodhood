<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/replier_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/popeye"
            app:civ_border_color="#FF0000"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/replier_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/commenter_name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:layout_marginLeft="48dp"
            android:layout_marginStart="48dp"/>

        <TextView
            android:textColor="#0000ff"
            android:id="@+id/replying_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Replying to"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/the_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/post_caption"/>
    <!--android:ellipsize="end"-->
    <!--android:maxLines="2"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="72dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/like_reply"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/outline_favorite_border_black_24dp"/>

        <TextView
            android:id="@+id/number_of_likes_in_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="18sp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            />

        <ImageView
            android:id="@+id/reply_to_reply"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/outline_comment_black_24dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="0dp"/>

        <TextView
            android:id="@+id/number_of_replies_to_reply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="18sp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            />

    </LinearLayout>

    <!--<include-->
    <!--layout="@layout/com_n_like"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="24dp"/>-->


</LinearLayout>