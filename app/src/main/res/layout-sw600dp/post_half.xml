<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingLeft="8dp"
    android:paddingTop="16dp"
    android:paddingEnd="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="@dimen/home_feed_view_holder_bottom_margin"
    android:orientation="vertical">

    <include
        android:id="@+id/included_post_q"
        layout="@layout/post_q"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/go_to_full"
        style="@style/TextClickable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/see_feedbacks"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"/>

    <include
        android:id="@+id/included_com_n_like"
        layout="@layout/com_n_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>


